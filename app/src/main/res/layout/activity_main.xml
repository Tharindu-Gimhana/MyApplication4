<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".MainActivity">

    <!-- Top Bar: Contains Logo, Search Bar, and Profile Icon -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FOT NEWS CORNER Logo -->

        <!-- Search Bar -->

        <!-- Profile Icon -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- "Latest news......" Title -->

    <!-- RecyclerView for displaying News Cards -->

    <!-- Bottom Navigation View -->

    <TextView
        android:id="@+id/latestNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest news......"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsRecyclerView"
        android:layout_width="438dp"
        android:layout_height="651dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/latestNewsTitle"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/news_card" />

    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Dev Info Tab (formerly Home) -->
        <LinearLayout
            android:id="@+id/tabDevInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dev_logo"
                android:tint="@color/inactive_tab_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dev info"
                android:textSize="12sp"
                android:textColor="@color/inactive_tab_color" />
        </LinearLayout>

        <!-- Sports Tab -->
        <LinearLayout
            android:id="@+id/tabSports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sport_icon"
                android:tint="@color/inactive_tab_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textSize="12sp"
                android:textColor="@color/inactive_tab_color" />
        </LinearLayout>

        <!-- Academics Tab -->
        <LinearLayout
            android:id="@+id/tabAcademics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/event_icon"
                android:tint="@color/inactive_tab_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academics"
                android:textSize="12sp"
                android:textColor="@color/inactive_tab_color" />
        </LinearLayout>

        <!-- Events Tab -->
        <LinearLayout
            android:id="@+id/tabEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/event_icon"
                android:tint="@color/inactive_tab_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="12sp"
                android:textColor="@color/inactive_tab_color" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="30dp"
        android:src="@drawable/logo_small"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="82dp" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="240dp"
        android:layout_height="21dp"
        android:background="@drawable/search_container"
        android:drawableStart="@drawable/search_icon"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-light"
        android:hint="Search"
        android:imeOptions="actionSearch"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/profileIcon"
        app:layout_constraintStart_toEndOf="@+id/logo"
        tools:ignore="Autofill,LabelFor"
        tools:layout_editor_absoluteY="97dp" />

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteY="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
